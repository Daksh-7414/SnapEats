<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Special Offer Text -->

    <!-- Order Now Button -->

    <!-- Food Image -->
    <RelativeLayout
        android:id="@+id/specialCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"

        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/specialOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:text="Special Offers"
            android:textColor="@color/colorTextPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/specialOfferText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/specialOffer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="43dp"
            android:text="Get Buy 1 Get 1 Free\non all medium\npizzas today"
            android:textColor="@color/colorTextPrimary"

            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/specialOffer"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="@+id/specialOffer"
            app:layout_constraintTop_toBottomOf="@+id/specialOffer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/orderNowButton"
            android:layout_width="139dp"
            android:layout_height="48dp"
            android:layout_below="@+id/specialOfferText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/colorError"
            app:cornerRadius="30dp"
            android:padding="3dp"
            android:text="Order Now"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/offerfoodImage"
            android:layout_width="200dp"
            android:layout_height="189dp"
            android:layout_marginEnd="4dp"

            

            android:src="@drawable/special_image_4"

            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
