<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="38dp"
    android:paddingEnd="38dp"
    android:paddingStart="38dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/slide_1"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="All your favorites"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:text="Get all your favorite foods in one place. Save time and order in a few taps!"        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextSecondary" />

</LinearLayout>